<% if @post.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@post.errors.count, "error") %> prohibited
        this post from being saved:
      </h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>


<h1>Add Post</h1>

<%= form_for  @post do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
  <br>  
  <%= f.label :body %>
  <%= f.text_area :body, class: "form-control" %>
  <br>
  <%= f.label "Image" %>
  <%= f.fields_for :images do |i| %> 
    <%= i.file_field :attachment, class: "form-control"  %>
  <% end %>
  <br>
  <%= f.label :tag_list, 'Tags (separated with comas)' %>
<%= f.text_field :tag_list, class: 'form-control' %>
  <br>
  <% if params[:action] == "edit" && @post.panding?  %> 
    <%= f.check_box :publish %> <%= f.label :publish, "publish" %>
  <% end %>
   <br>
   <div>
       <%= f.date_select :publish_date,  class: 'datepicker'  %>

   </div>  
    
   
  
  
   

  <br>
  <%= f.submit "Submit", class: "btn btn-success" %>
<% end %>
   
   


