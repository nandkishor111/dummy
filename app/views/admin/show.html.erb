<h1>Listing Users</h1>
 
<table class="table">
  <tr class="info">
    <th class="col-lg-2">First Name</th>
    <th class="col-lg-5">Last Name</th>
    <th class="col-lg-4">Email Id</th>
    <th class="col-lg-3">Action</th>
    
  </tr>

   <% @users.each do |user| %>
      <tr >
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.email %></td>
      <td>
      	 <%= link_to 'Destroy', [user],
              method: :delete,
              data: { confirm: 'Are you sure?' } %>

      </td>
      </tr>
    <%end%>
</table>
